<?php

// stores user data sent by HTTP POST to variables
	$first = mysqli_real_escape_string($_POST["fname"]); 
	$last = mysqli_real_escape_string($_POST["lname"]); 
	

require 'credentials.php';

	// Create connection
	$conn = mysqli_connect($servername, $username, $password, $dbname); 
	if (!$conn) {
		die("Error: " . mysqli_error());
	}

	else {
		echo "Success!";
	}

	//insert data
	$sql = "INSERT INTO User (Firstname, Lastname)
	VALUES ('first', 'last')";

	//check data insertion success
if (mysqli_query($conn, $sql)) {
    echo "New record created successfully";
} else {
    echo "Error: " . $sql . "<br>" . mysqli_error($conn);
}


	mysqli_close($conn);
?>
